@{
    ViewData["Title"] = "Add Authors";
}
@model TBLAuthorsModel
<h1>Authors Ekle</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<hr class="border border-dark border-3 opacity-75">

<form action="/Home/AddAuthors" method="post">

     <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="Name" placeholder="Name girin" name="Name">
        <label for="title">Name</label>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="SurName" placeholder="SurName girin" name="SurName">
        <label for="title">SurName</label>
        <span asp-validation-for="SurName" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="number" class="form-control" id="Age" placeholder="Age girin" name="Age">
        <label for="title">Age</label>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="datetime" class="form-control" id="Birthday" placeholder="Birthday girin" name="Birthday">
        <label for="title">Birthday</label>
        <span asp-validation-for="Birthday" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="Birthplace" placeholder="Birthplace girin" name="Birthplace">
        <label for="title">Birthplace</label>
        <span asp-validation-for="Birthplace" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="url" class="form-control" id="ImageURL" placeholder="ImageURL girin" name="ImageURL">
        <label for="title">ImageURL</label>
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>


    <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="Description" placeholder="Description girin" name="Description">
        <label for="title">Description</label>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-floating mb-3 mt-3">
        <input type="text" class="form-control" id="Summary" placeholder="Summary girin" name="Summary">
        <label for="title">Summary</label>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
</form>

<hr class="border border-dark border-3 opacity-75">
